#ifndef __GPIO_DRIVER_H
#define __GPIO_DRIVER_H

#ifdef __cplusplus
 extern "C" {
#endif

#define __REG					*(volatile unsigned int *)

typedef unsigned int UINT32;
typedef unsigned char UINT8;

typedef enum
{
	LOW = 0,
	HIGH = 1
}GPIO_PinState;

typedef struct
{
	__REG UINT32 MODE_R;
	__REG UINT32 OTYPE_R;
	__REG UINT32 OSPEED_R;
	__REG UINT32 PUPD_R;
	__REG UINT32 ID_R
	__REG UINT32 OD_R
	__REG UINT32 BSR_R
	__REG UINT32 LCK_R
	__REG UINT32 AFR_HR
	__REG UINT32 AFR_LR
}GPIO;




UINT8 initPin();
UINT8 readPin();
UINT8 writePin();





#endif
