#ifndef __GPIO_DRIVER_H
#define __GPIO_DRIVER_H

#ifdef __cplusplus
 extern "C" {
#endif

#define __REG					*(volatile unsigned int *)

typedef unsigned int UINT32;

typedef enum
{
	LOW = 0,
	HIGH = 1
}GPIO_PinState;

typedef enum
{
	GPIOA = 0,
	GPIOB = 1,
	GPIOC = 2,
	GPIOD = 3,
	GPIOE = 4,
	GPIOF = 5,
	GPIOG = 6,
	GPIOH = 7,
	GPIOI = 8,
	GPIOJ = 9,
	GPIOK = 10
}GPIO_Port;

typedef struct
{
	__REG uint32_t MODE_R;
	__REG uint32_t OTYPE_R;
	__REG uint32_t OSPEED_R;
	__REG uint32_t PUPD_R;
	__REG uint32_t ID_R
	__REG uint32_t OD_R
	__REG uint32_t BSR_R
	__REG uint32_t LCK_R
	__REG uint32_t AFR_HR
	__REG uint32_t AFR_LR
}GPIO;


uint8_t initPin(GPIO config, GPIO_Port portx);
uint8_t readPin();
uint8_t writePin();





#endif
